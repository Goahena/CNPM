@model IList<LiveDinner.Models.Post>
@using LiveDinner.Utilities;


<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <form asp-controller="Blog" asp-action="Search" method="get">
                    <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
                        <div class="input-group">
                            <input type="text" id="keyword" name="keyword" placeholder="What're you searching for?" class="form-control border-0 bg-light">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End All Pages -->
<!-- Start blog -->
<div class="blog-box">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                string url = Functions.TitleSlugGeneration("Post", item.Title, item.PostID);
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="blog-box-inner">
                        <div style="height:424px" class="blog-img-box">
                            <img style="width:100%; height:100%" class="img-fluid" src="@item.Images" alt="">
                        </div>
                        <div class="blog-detail">
                            <h4>@item.Title</h4>
                            <ul>
                                <li><span>Post by @item.Author</span></li>
                                <li>|</li>
                                <li><span>@item.CreatedDate.ToString()</span></li>
                            </ul>
                            <p style="height: 200px">@item.Abstract </p>
                            <a class="btn btn-lg btn-circle btn-outline-new-white" href="/@url">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End blog -->