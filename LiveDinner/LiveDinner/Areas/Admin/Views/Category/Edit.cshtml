@using LiveDinner.Utilities;
@model LiveDinner.Models.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Tạo mới danh mục
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="#">Danh mục</a></li>
            <li class="active">Tạo mới</li>
        </ol>
    </section>
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <!-- form start -->
            <form asp-action="Edit" method="post">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" asp-for="CategoryID" type="hidden">
                        <label asp-for="CategoryName">Tên sản phẩm</label>
                        <input type="text" class="form-control mb-3" asp-for="CategoryName">
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="MenuOrder">Thứ tự</label>
                        <input type="text" class="form-control mb-3" asp-for="MenuOrder">
                    </div>
                    <div class="form-group col-md-12 mt-3 mb-3">
                        <label>
                            @Html.CheckBox("IsActive", true)
                            Hiển thị
                        </label>
                    </div>
                </div>
                <div class="col-md-5"></div>
                <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
                <a href="javascript:history.back()" class="btn btn-lg btn-warning p-2">Quay lại</a>
            </form>

        </div><!-- /.box -->


    </div><!--/.col (left) -->
    <!-- right column -->
</div>
