@using LiveDinner.Models;
@model IList<Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh sách các danh mục
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="#">Danh mục</a></li>
            <li class="active">Danh sách</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th class="col-5 text-center">Tên danh mục</th>
                                <th class="col-2 text-center">Thứ tự</th>
                                <td class="col-2 text-center">Trạng thái</td>
                                <th class="col-3 text-center">Chức năng</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.CategoryName</td>
                                    <td class="text-center">@item.MenuOrder</td>
                                    <td class="text-center">@item.IsActive</td>
                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit"
                                           asp-route-id="@item.CategoryID" class="btn btn-primary btn-sm"
                                           title="Sửa nội dung danh mục"><i class="fa fa-fw fa-pencil"></i></a>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete"
                                           asp-route-id="@item.CategoryID" class="btn btn-primary btn-sm"
                                           title="Xóa danh mục"><i class="fa fa-fw fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->