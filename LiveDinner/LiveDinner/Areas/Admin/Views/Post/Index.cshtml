@using LiveDinner.Models;
@model IList<Post>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh sách bài viết
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="#">Bài viết</a></li>
            <li class="active">Danh sách</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th class="col-1 text-center">#</th>
                                <th class="col-5 text-center">Tiêu đề</th>
                                <th class="col-2 text-center">Tác giả</th>
                                <td class="col-2 text-center">Thời gian</td>
                                <td class="col-1 text-center">Ẩn/Hiện</td>
                                <th class="col-1 text-center">Chức năng</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th class="text-center" scope="row">@item.PostID</th>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Details"
                                           asp-route-itemid="@item.PostID" class="text-primary">@item.Title</a>
                                    </td>
                                    <td class="text-center">@item.Author</td>
                                    <td class="text-center">@item.CreatedDate.ToString()</td>
                                    <td class="text-center">@item.IsActive</td>
                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Edit"
                                           asp-route-id="@item.PostID" class="btn btn-primary btn-sm"
                                           title="Sửa nội dung bài viết"><i class="fa fa-fw fa-pencil"></i></a>
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Delete"
                                           asp-route-id="@item.PostID" class="btn btn-primary btn-sm"
                                           title="Xóa bài viết"><i class="fa fa-fw fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->