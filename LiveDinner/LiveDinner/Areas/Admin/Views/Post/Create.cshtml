@using LiveDinner.Utilities;
@model LiveDinner.Models.Post
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Tạo mới bài viết
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="#">Bài viết</a></li>
            <li class="active">Tạo mới</li>
        </ol>
    </section>
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <!-- form start -->
            <form asp-action="Create" method="post">
                <div class="form-row">

                    <div class="form-group col-md-12">
                        <label asp-for="Title">Tiêu đề</label>
                        <input type="text" class="form-control mb-3" asp-for="Title">
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Abstract">Tóm tắt</label>
                        <input type="text" class="form-control mb-3" asp-for="Abstract">
                    </div>
                    <div class="from-group col-md-12">
                        <label class="control-label">Ảnh bài viết</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-success" type="button" onclick="openDialog()">Chọn ảnh</button>
                            </div>
                            <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2">
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Contents">Nội dung bài viết</label>
                        <textarea asp-for="Contents" class="form-control"></textarea>
                    </div>

                    <div class="form-group col-md-6 mt-3 mb-3">
                        <label>
                            @Html.CheckBox("IsActive", false)
                            Hiển thị
                        </label>
                    </div>
                    <div class="form-group d-none">
                        <input asp-for="CreatedDate" class="form-control" value="@Functions.getCurrentDate()" />
                    </div>
                    <div class="form-group d-none">
                        <input asp-for="PostOrder" class="form-control" value="1" />
                    </div>
                    <div class="form-group d-none">
                        <input asp-for="Status" class="form-control" value="1" />
                    </div>
                    <div class="form-group d-none">
                        <input asp-for="Link" class="form-control" value="NULL" />
                    </div>
                </div>

                <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-lg btn-danger p-2">
                    <i class="bi bi-trash-fill"></i> Lưu lại
                </button>
            </form>

        </div><!-- /.box -->


    </div><!--/.col (left) -->
    <!-- right column -->
</div>


@{
    var summerNote = new LiveDinner.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}