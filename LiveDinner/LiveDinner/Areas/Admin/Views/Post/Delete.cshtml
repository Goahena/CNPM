@model LiveDinner.Models.Post
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Quản lý bài viết
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="#">Bài viết</a></li>
            <li class="active">Xóa bài viết</li>
        </ol>
    </section>
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
            </div><!-- /.box-header -->
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="PostID">Mã bài viết</label>
                    <input type="text" class="form-control mp-3" asp-for="PostID" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Title">Tiêu đề</label>
                    <input type="text" class="form-control mp-3" asp-for="Title" disabled />
                </div>
            </div>
            <!-- form start -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="PostID" />
                <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-lg btn-danger p-2">
                    <i class="bi bi-trash-fill"></i> Xóa bài viết
                </button>
            </form>

        </div><!-- /.box -->


    </div><!--/.col (left) -->
    <!-- right column -->
</div>@*
