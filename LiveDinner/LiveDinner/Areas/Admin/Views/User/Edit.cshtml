@using LiveDinner.Utilities;
@model LiveDinner.Areas.Admin.Models.User
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Chỉnh sửa người dùng
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="#">Người dùng</a></li>
            <li class="active">Tạo mới</li>
        </ol>
    </section>
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <!-- form start -->
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="All"></div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" asp-for="UserID" type="hidden">
                        <label asp-for="UserName">Tài khoản</label>
                        <input type="text" class="form-control mb-3" asp-for="UserName">
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Email">Email</label>
                        <input type="text" class="form-control mb-3" asp-for="Email">
                    </div>
                    
                    <div class="form-group col-md-12">
                        <label asp-for="Password">Mật khẩu</label>
                        <input type="text" class="form-control mb-3" asp-for="Password">
                    </div>

                    <div class="form-group col-md-6 mt-3 mb-3">
                        <label>
                            @Html.CheckBox("IsActive", true)
                            Hiển thị
                        </label>
                    </div>
                </div>

                <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-lg btn-danger p-2">
                    <i class="bi bi-trash-fill"></i> Lưu lại
                </button>
            </form>

        </div><!-- /.box -->


    </div><!--/.col (left) -->
    <!-- right column -->
</div>


@{
    var summerNote = new LiveDinner.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}