@using LiveDinner.Models;
@model IList<Reservation>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh sách bài viết
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="#">Bài viết</a></li>
            <li class="active">Danh sách</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th class="col-1 text-center">#</th>
                                <th class="col-5 text-center">Tên khách hàng</th>
                                <th class="col-2 text-center">Email</th>
                                <th class="col-2 text-center">Số điện thoại</th>
                                <th class="col-1 text-center">Số người</th>
                                <th class="col-1 text-center">Thời gian đặt bàn</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th class="text-center" scope="row">@item.ReservationID</th>
                                    <td class="text-center">@item.FullName</td>
                                    <td class="text-center">
                                        <a href="mailto:@item.Email">@item.Email</a>
                                    </td>
                                    <td class="text-center">@item.Number</td>
                                    <td class="text-center">@item.Person</td>
                                    <td class="text-center">@item.DateTime.ToString()</td>
                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Reservation" asp-action="Delete"
                                           asp-route-id="@item.ReservationID" class="btn btn-primary btn-sm"
                                           title="Xóa bài viết"><i class="fa fa-fw fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->